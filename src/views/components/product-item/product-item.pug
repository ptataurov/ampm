mixin product-item({ item, type }, mixes)

  .product-item(class=(mixes) && `${mixes}__product-item`)


    a.product-item__img-container(href='#')
      img.product-item__img(src=`${item.img}` alt='Изображение')
    
    p.product-item__num= item.num
    a.product-item__name(href='#')= item.name
    .product-item__price-group
      p.product-item__oldPrice= item.oldPrice
      p.product-item__price= item.price
    
    +btn-normal({ label: 'Добавить в корзину', type: 'outline' }, 'product-item')


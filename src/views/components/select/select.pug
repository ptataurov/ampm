mixin select({ label, items, button, type }, mixes)

  .select(class=(mixes) && `${mixes}__select` class=(type === 'bg') && 'select--bg')
    if (label)
      p.select__label= label

    .select__wrap
      .select__self-wrap
        select.select__self
          each item in items
            option.select__option= item

        img.select__icon(src=require('views/components/select/img/icon-arrow.svg') alt='Иконка')

      if (button)
        +btn-normal({ label: button, type: 'gray' }, 'select')
